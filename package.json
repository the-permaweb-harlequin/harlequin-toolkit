{
  "name": "harlequin-toolkit",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/the-permaweb-harlequin/harlequin-toolkit.git",
  "author": "atticusofsparta <atticusofsparta@protonmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "nx build",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "test": "nx run-many --target=test --all",
    "format": "prettier --write .",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "find . -name '.DS_Store' -delete && find . -name '._*' -delete && find . -name 'Thumbs.db' -delete && echo 'Cleaned system files (.DS_Store, ._*, and Thumbs.db files)'",
    "clean:dry-run": "find . -name '.DS_Store' -o -name '._*' -o -name 'Thumbs.db' | head -20"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@nx/eslint": "^21.4.1",
    "@nx/js": "^21.4.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "postcss": "^8.4.21",
    "postcss-less": "^6.0.0",
    "prettier": "^2.8.8",
    "stylelint": "^15.4.0",
    "stylelint-config-standard": "^32.0.0",
    "stylelint-less": "^1.0.6",
    "stylelint-prettier": "3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@permaweb/ao-loader": "^0.0.49"
  }
}
