{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "AO Process built with Harlequin",
  "main": "main.lua",
  "scripts": {
    "setup": "luarocks install --only-deps {{PROJECT_NAME}}-1.0.0-1.rockspec",
    "build": "npm run setup && mkdir -p build && cd build && cmake .. && make",
    "build:wasm": "npm run setup && mkdir -p build && cd build && emcmake cmake .. && emmake make",
    "build:harlequin": "harlequin build --entrypoint main.lua",
    "dev": "harlequin build --entrypoint main.lua --watch",
    "test": "busted test/",
    "test:watch": "busted test/ --watch",
    "test:trampoline": "npm run build && cd build && make test_trampoline",
    "bundle": "harlequin lua-utils bundle --entrypoint main.lua --output dist/bundle.lua",
    "install": "luarocks make {{PROJECT_NAME}}-1.0.0-1.rockspec",
    "pack": "luarocks pack {{PROJECT_NAME}}-1.0.0-1.rockspec",
    "lint": "luacheck main.lua handlers/ utils/ test/",
    "clean": "rm -rf build/ dist/ *.rock"
  },
  "keywords": [
    "ao",
    "arweave",
    "process",
    "lua",
    "harlequin"
  ],
  "author": "{{AUTHOR_NAME}}",
  "license": "MIT",
  "devDependencies": {
    "busted": "^2.0.0",
    "luacheck": "^1.1.0"
  },
  "luarocks": {
    "dependencies": [
      "luajson >= 1.3.4",
      "penlight >= 1.13.1",
      "luafilesystem >= 1.8.0"
    ],
    "dev_dependencies": [
      "busted >= 2.0.0",
      "luacheck >= 1.1.0"
    ]
  },
  "harlequin": {
    "type": "ao-process",
    "language": "lua",
    "version": "1.0.0"
  }
}
