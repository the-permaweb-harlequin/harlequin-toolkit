{
  "targets": {
    "debug": {
      "outFile": "build/{{PROJECT_NAME}}.debug.wasm",
      "textFile": "build/{{PROJECT_NAME}}.debug.wat",
      "sourceMap": true,
      "debug": true,
      "bindings": "esm",
      "exportRuntime": true
    },
    "release": {
      "outFile": "build/{{PROJECT_NAME}}.wasm",
      "textFile": "build/{{PROJECT_NAME}}.wat",
      "sourceMap": false,
      "optimizeLevel": 3,
      "shrinkLevel": 2,
      "converge": true,
      "noAssert": true,
      "bindings": "esm",
      "exportRuntime": true
    }
  },
  "options": {
    "bindings": "esm",
    "exportRuntime": true,
    "runtime": "stub"
  },
  "extends": "./node_modules/assemblyscript/std/assembly.json"
}
