{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "AO Process built with AssemblyScript and Harlequin",
  "main": "build/{{PROJECT_NAME}}.js",
  "scripts": {
    "setup": "npm install",
    "build": "asc assembly/index.ts --target release --outFile build/{{PROJECT_NAME}}.wasm --bindings esm --exportRuntime --optimize --stats",
    "build:debug": "asc assembly/index.ts --target debug --outFile build/{{PROJECT_NAME}}.debug.wasm --bindings esm --exportRuntime --debug --stats",
    "build:harlequin": "harlequin build --entrypoint assembly/index.ts",
    "test": "npm run build:debug && node tests/index.js",
    "test:watch": "nodemon --watch assembly --watch tests --exec 'npm test'",
    "dev": "harlequin build --entrypoint assembly/index.ts --watch",
    "clean": "rm -rf build/ dist/",
    "lint": "eslint assembly/**/*.ts tests/**/*.js",
    "fmt": "prettier --write assembly/**/*.ts tests/**/*.js",
    "size": "npm run build && ls -lh build/*.wasm && wasm-opt --print-features build/{{PROJECT_NAME}}.wasm",
    "optimize": "npm run build && wasm-opt -Os build/{{PROJECT_NAME}}.wasm -o build/{{PROJECT_NAME}}.optimized.wasm",
    "docker:build": "docker run --rm -v $(pwd):/src -w /src node:18 sh -c 'npm install && npm run build'"
  },
  "keywords": [
    "ao",
    "arweave",
    "process",
    "assemblyscript",
    "webassembly",
    "wasm",
    "harlequin"
  ],
  "author": "{{AUTHOR_NAME}}",
  "license": "MIT",
  "devDependencies": {
    "assemblyscript": "^0.27.0",
    "@assemblyscript/loader": "^0.27.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "nodemon": "^3.0.0",
    "binaryen": "^116.0.0"
  },
  "dependencies": {
    "as-bind": "^0.6.0"
  },
  "harlequin": {
    "type": "ao-process",
    "language": "assemblyscript",
    "version": "1.0.0",
    "build_system": "assemblyscript"
  },
  "files": [
    "assembly/",
    "build/",
    "asconfig.json",
    ".harlequin.yaml",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/{{GITHUB_USER}}/{{PROJECT_NAME}}.git"
  },
  "bugs": {
    "url": "https://github.com/{{GITHUB_USER}}/{{PROJECT_NAME}}/issues"
  },
  "homepage": "https://github.com/{{GITHUB_USER}}/{{PROJECT_NAME}}#readme"
}
