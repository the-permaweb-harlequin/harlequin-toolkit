{
  "name": "remote-signing",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "remote-signing",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "commands": ["./scripts/build.sh"]
      },
      "configurations": {
        "production": {
          "commands": ["./scripts/build.sh"]
        },
        "with-examples": {
          "commands": ["./scripts/build.sh --examples"]
        }
      }
    },

    "test": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make test"
      }
    },
    "test-integration": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make test-integration"
      }
    },
    "test-all": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make test-all"
      }
    },
    "benchmark": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make benchmark"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "commands": ["go fmt ./...", "go vet ./..."]
      }
    },
    "tidy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "go mod tidy"
      }
    },

    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make docker-build"
      }
    },
    "docker-build-binary": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make docker-build-binary"
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make docker-run"
      }
    },
    "docker-stop": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make docker-stop"
      }
    },
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "remote-signing",
        "command": "make docs"
      }
    }
  },
  "tags": ["type:library", "lang:go", "service:remote-signing"]
}
